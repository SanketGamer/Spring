-- Payment Service interface
public interface PaymentService {

    public String pay();
}

-- RazorpayPaymentservice class
@Component
public class RazorPayPaymentService implements PaymentService{

    public String pay(){
        String Payment="RazorPay payment";
        System.out.println("Payment from: "+Payment);
        return Payment;
    }
}

-- StripePaymentService class
@Component
public class StripePaymentService implements PaymentService{

    public String pay(){
        String Payment="Stripe payment";
        System.out.println("Payment from: "+Payment);
        return Payment;
    }

}
___________
//Main class 

@SpringBootApplication
public class InternalWorkingOfSpringboot implements CommandLineRunner {

    public static void main(String[] args) {
        SpringApplication.run(InternalWorkingOfSpringboot.class, args);
    }
    //@Autowired  //field injection
    private final PaymentService paymentService;

     public InternalWorkingOfSpringboot(PaymentService paymentService){  //constructor di
         this.paymentService=paymentService;
    }
    @Override
    public void run(String... args) throws Exception {
        String payment=paymentService.pay();
        System.out.println("Payment done: "+payment);
    }
}

-- This is called loose coupling. Now we can use any PaymentService implementation and configure it as needed.
